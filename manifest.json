{ 
	"name": "Ctrip 前端性能检测工具",
	"version": "2.0",
  "manifest_version": 2,

	
	"description": "Ctrip 前端性能检测工具",
	"icons": { 
		"16": "res/img/logo_16.png",
		"48": "res/img/logo_48.png",
		"128": "res/img/logo_128.png"
	 }, 
	 
	"browser_action": {
		"default_icon" : "res/img/logo_16.png",
		"default_title" : "Ctrip 前端性能检测工具",
		"default_popup" : "html/popup.html"
	},

  "background": {
    "scripts": ["js/scheduler.js","js/statistics.js","js/background.js"]
  },

	"permissions": [
		"tabs",
		"browsingData",
    "storage",
    "webRequest",
    "notifications",
    "http://*/*"
	],

	"content_scripts": [{	
		"matches":["http://*/*","https://*/*"],
		"js":[
			"js/timer.js"
		],
		"all_frames":false
	}],
   "content_security_policy": "script-src 'self' https://ssl.google-analytics.com 'unsafe-eval'; object-src 'self'"
}
